<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Freddy_OrtizS1.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#1BEC3D" Padding="20" CornerRadius="20">
            <Label Text="Aplicacion Tarea Semana 1 " FontSize="22" HorizontalOptions="Center" VerticalOptions="Start"/>
            </Frame>

            <Frame BackgroundColor="#FFC9DEF5" Padding="20" CornerRadius="20">
                <Button x:Name="btnOpcion1" Text="Opcón 1" Clicked="btnOpcion1_Clicked" TextColor="Black" FontSize="22"/>
            </Frame>

            <Frame BackgroundColor="#FFC9DEF5" Padding="20" CornerRadius="20">
                <Button x:Name="btnOpcion2" Text="Opcón 2" Clicked="btnOpcion2_Clicked" TextColor="Black" FontSize="22"/>
            </Frame>






        </StackLayout>
    </ContentPage.Content>
</ContentPage>