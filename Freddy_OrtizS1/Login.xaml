<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Freddy_OrtizS1.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#1BEC3D" Padding="20" CornerRadius="20">
                <Label Text="Inicio de sesión" HorizontalTextAlignment="Center" TextColor="Black" FontSize="22"/>
            </Frame>
            <Image Source="https://revista.uisrael.edu.ec/images/uisrael.png" HorizontalOptions="End"/>
            <Image Source="freddy.png" WidthRequest="100" HeightRequest="100"/>
            <Entry x:Name="txtUsuario"  Placeholder="Usuario" TextColor="Black" FontSize="22"/>
            <Entry x:Name="txtContraseña" Placeholder="Contraseña" IsPassword="True" TextColor="Black" FontSize="22"/>

            <Frame BackgroundColor="#FFC9DEF5" Padding="20" CornerRadius="20">
                <Button x:Name="btnIniciar" Text="Iniciar Sesión" Clicked="btnIniciar_Clicked" TextColor="Black" FontSize="22"/>
            </Frame>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>