<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Freddy_OrtizS1.Calcular">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#1BEC3D" Padding="20" CornerRadius="20">
                <Label Text="Vamos a calcular Edad" FontSize="22" HorizontalOptions="Center" VerticalOptions="Start"/>
            </Frame>

            <Label Text="Ingrese su fecha de nacimiento (YYYY-MM-DD):" />
            <Entry x:Name="txtFechaNacimiento" />
            <Button Text="Calcular Edad" Clicked="Button_Clicked" />
            <Label x:Name="lblEdad" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>